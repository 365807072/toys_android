<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0efed"
    android:orientation="vertical"
    tools:context=".InitActivity" >

    <RelativeLayout
        android:id="@+id/general_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg" >

        <ImageView
            android:id="@+id/general_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/grow_detail_backback"
            android:visibility="gone" />

        <TextView
            android:id="@+id/general_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="更换手机号"
            android:textColor="@color/text_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_remend"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1.安全验证"
                android:textColor="#fe6c6c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="  >  2.换绑手机"
                android:textColor="#999999"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/old_num"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:paddingLeft="19dp"
            android:singleLine="true"
            android:textColor="#cccccc"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#f0efed" />

    <EditText
        android:id="@+id/num"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:hint="请输入完整的旧手机号"
        android:inputType="number"
        android:paddingLeft="19dp"
        android:singleLine="true"
        android:textColor="#999999"
        android:textColorHint="#999999"
        android:textSize="14sp" />

    <Button
        android:id="@+id/commit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/code_commit2"
        android:text="验证"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout>