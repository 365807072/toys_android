<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#dddddd" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/item_toys_main_icon"
            android:layout_width="5dp"
            android:layout_height="fill_parent"
            android:background="@drawable/toys_main_list_icon" />

        <TextView
            android:id="@+id/item_toys_main_styleName"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="玩具类型"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/item_toys_main_more"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingTop="4dp"
            android:text="更多"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="165dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/item_toys_main_01"
            android:layout_width="fill_parent"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/item_toys_main_img01"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/item_toys_main_name01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/item_toys_main_img01"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="玩具名字"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_12" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/item_toys_main_price01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0元/天"
                    android:textColor="#fc4c57"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/item_toys_main_price011"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:text="0元/天"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_10" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/item_toys_main_imghint01"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/item_toys_main_img01"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-2dp"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:background="#dddddd" />

        <RelativeLayout
            android:id="@+id/item_toys_main_02"
            android:layout_width="fill_parent"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/item_toys_main_img02"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/item_toys_main_name02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/item_toys_main_img02"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="玩具名字"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_12" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/item_toys_main_price02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0元/天"
                    android:textColor="#fc4c57"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/item_toys_main_price022"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:text="0元/天"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_10" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/item_toys_main_imghint02"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/item_toys_main_img02"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-2dp"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:background="#dddddd" />

        <RelativeLayout
            android:id="@+id/item_toys_main_03"
            android:layout_width="fill_parent"
            android:layout_height="165dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/item_toys_main_img03"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/item_toys_main_name03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/item_toys_main_img03"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:text="玩具名字"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_12" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/item_toys_main_price03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0元/天"
                    android:textColor="#fc4c57"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/item_toys_main_price033"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:text="0元/天"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_10" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/item_toys_main_imghint03"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/item_toys_main_img03"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="-2dp"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="#f5f5f5" />

</LinearLayout>