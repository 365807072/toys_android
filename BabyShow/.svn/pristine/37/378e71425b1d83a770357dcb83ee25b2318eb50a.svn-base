<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="52dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/back_show" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/toShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="秀秀"
                    android:textColor="#ff6d6d"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/toSpecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="专题"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

        <com.yyqq.commen.view.PullDownView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#FFFFFF"
            android:divider="#FFFFFF"
            android:footerDividersEnabled="false"
            android:hapticFeedbackEnabled="false"
            android:listSelector="#FFFFFF" />
    </LinearLayout>

    <ImageView
        android:id="@+id/send_show"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/xiu" />

    <ImageView
        android:id="@+id/upload_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/video_upload_icon"
        android:visibility="gone" />

</FrameLayout>