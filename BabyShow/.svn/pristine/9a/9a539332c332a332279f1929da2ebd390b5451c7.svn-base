<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/group_main_headAll"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="#fff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/group_main_bgimg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/group_main_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/group_main_finish" />

        <ImageView
            android:id="@+id/group_main_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/group_main_shared"
            android:layout_alignTop="@+id/group_main_shared"
            android:layout_marginRight="35dp"
            android:src="@drawable/group_main_edit"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/group_main_shared"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/group_main_shared" />

        <TextView
            android:id="@+id/group_main_businessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_main_finish"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/group_main_addNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/group_main_businessIcon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignTop="@+id/group_main_businessName"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1.5dp"
            android:layout_toRightOf="@+id/group_main_businessName"
            android:src="@drawable/group_main_business" />

        <TextView
            android:id="@+id/group_main_detialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_main_businessName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/group_main_add"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/group_main_addNumber"
            android:layout_alignRight="@+id/group_main_addNumber"
            android:layout_marginBottom="20dp"
            android:src="@drawable/group_main_add" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#f5f5f5"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/group_detail_showOption"
                    android:layout_width="65dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/group_detial_all_btn"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="right|center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/to_business"
                    android:layout_width="63dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/to_business"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/to_record"
                    android:layout_width="63dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/group_titile_record"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/to_photo"
                    android:layout_width="63dp"
                    android:layout_height="28dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/group_titile_photo"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/group_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="精选"
            android:textColor="#999999"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/group_main_title_02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="精选"
            android:textColor="#999999"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>