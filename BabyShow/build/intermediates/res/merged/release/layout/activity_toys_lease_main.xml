<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toys_lease_main_all"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f5f5f5"
        android:orientation="vertical"
        tools:context="${relativePackage}.${activityClass}" >

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:background="#ffffff"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/lease_back"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/main_home_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/lease_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部"
                android:textColor="#333333"
                android:textSize="@dimen/title_text_size_center" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_head_all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:background="#fff"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/main_gone_hint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/lease_wait"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/lease_wait_img"
                        android:layout_width="35dp"
                        android:layout_height="18dp"
                        android:src="@drawable/lease_d_down" />

                    <ImageView
                        android:id="@+id/lease_wait_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/main_item_point" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lease_complete"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/lease_complete_img"
                        android:layout_width="35dp"
                        android:layout_height="18dp"
                        android:src="@drawable/lease_y_up" />

                    <ImageView
                        android:id="@+id/lease_complete_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/main_item_point"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lease_myself"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/lease_myself_img"
                        android:layout_width="35dp"
                        android:layout_height="18dp"
                        android:src="@drawable/lease_z_up" />

                    <ImageView
                        android:id="@+id/lease_myself_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/main_item_point"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#e8e8e8" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/search_root"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/search_root_bg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff" />

            <LinearLayout
                android:id="@+id/main_head_search"
                android:layout_width="fill_parent"
                android:layout_height="27dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/lease_main_right"
                android:background="@drawable/view_to_shape05"
                android:gravity="left|center_vertical" >

                <TextView
                    android:id="@+id/toys_search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="left|center_vertical"
                    android:text="大家都在搜"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/lease_main_right"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/select_root"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/toys_top_type01"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/toys_top_type01_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="分类"
                    android:textColor="#666666"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/toys_top_type01_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:src="@drawable/toys_all_top_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toys_top_type02"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/toys_top_type02_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="分类"
                    android:textColor="#666666"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/toys_top_type02_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:src="@drawable/toys_all_top_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toys_top_type03"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/toys_top_type03_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="分类"
                    android:textColor="#666666"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/toys_top_type03_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:src="@drawable/toys_all_top_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/toys_top_type04"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/toys_top_type04_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="分类"
                    android:textColor="#666666"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/toys_top_type04_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="6dp"
                    android:src="@drawable/toys_all_top_down" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cart_ntf"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="#FFFDF6"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cart_ntf_icon" />

            <TextView
                android:id="@+id/shopping_car_hint_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#846943"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <com.yyqq.commen.view.PullDownView
            android:id="@+id/lease_main_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/search_root"
            android:cacheColorHint="#FFFFFF"
            android:divider="#FFFFFF"
            android:footerDividersEnabled="false"
            android:hapticFeedbackEnabled="false"
            android:listSelector="#FFFFFF"
            android:scrollbars="none" >
        </com.yyqq.commen.view.PullDownView>
    </LinearLayout>

    <ImageView
        android:id="@+id/search_to_cart"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/search_cart_icon"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/lease_screen_all"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="90dp"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/lease_select_all"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#90000000"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff" >

                <View
                    android:id="@+id/lease_select_topline"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5" />

                <GridView
                    android:id="@+id/lease_select_list"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/lease_select_topline"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:cacheColorHint="#FFFFFF"
                    android:divider="#FFFFFF"
                    android:footerDividersEnabled="false"
                    android:hapticFeedbackEnabled="false"
                    android:listSelector="#FFFFFF"
                    android:numColumns="3"
                    android:scrollbars="none" />

                <View
                    android:id="@+id/lease_select_bottomline"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/lease_select_list"
                    android:background="#f5f5f5" />

                <TextView
                    android:id="@+id/lease_select_list01_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lease_select_bottomline"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_text_down"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="5dp"
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lease_select_all_02"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#90000000"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff" >

                <View
                    android:id="@+id/lease_select_topline_02"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5" />

                <GridView
                    android:id="@+id/lease_select_list_02"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/lease_select_topline_02"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:cacheColorHint="#FFFFFF"
                    android:divider="#FFFFFF"
                    android:footerDividersEnabled="false"
                    android:hapticFeedbackEnabled="false"
                    android:listSelector="#FFFFFF"
                    android:numColumns="3"
                    android:scrollbars="none" />

                <View
                    android:id="@+id/lease_select_bottomline_02"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/lease_select_list_02"
                    android:background="#f5f5f5" />

                <TextView
                    android:id="@+id/lease_select_list02_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lease_select_bottomline_02"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_text_down"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="5dp"
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lease_select_all_03"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#90000000"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff" >

                <ListView
                    android:id="@+id/lease_select_list_03"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:cacheColorHint="#FFFFFF"
                    android:divider="#FFFFFF"
                    android:footerDividersEnabled="false"
                    android:hapticFeedbackEnabled="false"
                    android:listSelector="#FFFFFF"
                    android:scrollbars="none" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lease_select_all_04"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#90000000"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff" >

                <View
                    android:id="@+id/lease_select_topline_04"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5" />

                <ListView
                    android:id="@+id/lease_select_list_04"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/lease_select_topline_04"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:cacheColorHint="#FFFFFF"
                    android:divider="#FFFFFF"
                    android:footerDividersEnabled="false"
                    android:hapticFeedbackEnabled="false"
                    android:listSelector="#FFFFFF"
                    android:scrollbars="none" />

                <View
                    android:id="@+id/lease_select_bottomline_04"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/lease_select_list_04"
                    android:background="#f5f5f5" />

                <TextView
                    android:id="@+id/lease_select_list04_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lease_select_bottomline_04"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/shape_text_down"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="5dp"
                    android:text="确定"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>