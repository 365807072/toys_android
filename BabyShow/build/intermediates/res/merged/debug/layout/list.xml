<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <!--
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:scrollbars="none" >
    -->

    <LinearLayout
        android:id="@+id/kind_fist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/type1"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/xingqu" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="我的兴趣"
                android:textColor="#F7706E"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type2"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/huodong" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="成长活动"
                android:textColor="#F7706E"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type3"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/zhishi" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="育儿知识"
                android:textColor="#F7706E"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type4"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/qinggan" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="时尚情感"
                android:textColor="#F7706E"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type6"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/video_up" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="趣味短片"
                android:textColor="#F7706E"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/type5"
            android:layout_width="65dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chufang" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="辣妈厨房"
                android:textColor="#F7706E"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- </HorizontalScrollView> -->

    <com.yyqq.commen.view.PullDownView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/kind_fist"
        android:cacheColorHint="#FFFFFF"
        android:divider="#FFFFFF"
        android:footerDividersEnabled="false"
        android:hapticFeedbackEnabled="false"
        android:listSelector="#FFFFFF" >
    </com.yyqq.commen.view.PullDownView>

    <ImageView
        android:id="@+id/upload_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ly_title"
        android:layout_marginRight="10dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/video_upload_icon"
        android:visibility="gone" />

</RelativeLayout>