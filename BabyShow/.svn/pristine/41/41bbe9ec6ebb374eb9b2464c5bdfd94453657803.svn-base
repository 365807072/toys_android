<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yyqq.babyshow"
    android:layout_width="fill_parent"
    android:layout_height="110dp"
    android:background="#c2ffaf"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/lease_order_detail_top" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/lease_order_detail_top" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="right|center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="110dp"
            android:layout_marginRight="5dp"
            android:gravity="center|right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lease_order_type"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/lease_order_detail_txbg"
                android:gravity="center"
                android:paddingRight="5dp"
                android:text="状态啊"
                android:textColor="#fff"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/lease_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:text="2016-12-12 15:30"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/lease_order_detail_point" />

        <com.yyqq.commen.utils.RoundAngleImageView
            android:id="@+id/lease_order_img"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/def_head"
            app:roundHeight="38dp"
            app:roundWidth="38dp" />
    </LinearLayout>

</RelativeLayout>