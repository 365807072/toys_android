                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginLeft="15dp"
                    android:text="简介:"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/business_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#666666"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e4e4e4" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="7.5dp"
                android:background="#f0efed" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e4e4e4" />
            <!-- 评价 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="37.5dp"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="37.5dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="综合评价"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bs_line" />

                <ImageView
                    android:id="@+id/grade1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e4e4e4" />

            <!-- 秀秀用户评论 -->

            <TextView
                android:id="@+id/tv_xiu"
                android:layout_width="wrap_content"
                android:layout_height="37.5dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="秀秀用户评论"
                android:textColor="#666666"
                android:textSize="15sp" >
            </TextView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#f2f2f2" />

            <!-- 用户评论 -->

            <LinearLayout
                android:id="@+id/ly_ping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="#ff4d4d"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/grade3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="7.5dp" />

                    <TextView
                        android:id="@+id/expiration_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="#666666"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/user_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#333333"
                    android:textSize="14sp" >
                </TextView>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="#e4e4e4" />

            <RelativeLayout
                android:id="@+id/ly_more"
                android:layout_width="fill_parent"
                android:layout_height="35dp" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="查看更多评论"
                    android:textColor="#666666"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/new_jian" />
