<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#e4e4e4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/showshow_center_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="编辑头部"
            android:textColor="#fff"
            android:textSize="@dimen/title_text_size_center" />

        <ImageView
            android:id="@+id/showshow_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:src="@drawable/grow_detail_backback" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/group_edit_img"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="编辑头部大图"
            android:textSize="@dimen/text_size_14" />

        <ImageView
            android:id="@+id/group_edit_head_img"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#e4e4e4" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/group_edit_name"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑头部文字"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/group_edit_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#e4e4e4" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/group_edit_des"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:padding="10dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑副标题文字"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/group_edit_head_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

</LinearLayout>