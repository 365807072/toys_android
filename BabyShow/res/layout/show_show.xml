<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/title_bg" >

            <ImageView
                android:id="@+id/showshow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/grow_detail_backback" />

            <TextView
                android:id="@+id/showshow_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="萌宝"
                android:textColor="#ffffff"
                android:textSize="@dimen/title_text_size_center" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/back"
                android:layout_width="52dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/back_show" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/toShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="秀秀"
                    android:textColor="#ff6d6d"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/toSpecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="专题"
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>

        <com.yyqq.commen.view.PullDownView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#FFFFFF"
            android:divider="#FFFFFF"
            android:footerDividersEnabled="false"
            android:hapticFeedbackEnabled="false"
            android:listSelector="#FFFFFF" />
    </LinearLayout>

    <ImageView
        android:id="@+id/send_show"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/xiu" />

    <ImageView
        android:id="@+id/upload_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/video_upload_icon"
        android:visibility="gone" />

</FrameLayout>