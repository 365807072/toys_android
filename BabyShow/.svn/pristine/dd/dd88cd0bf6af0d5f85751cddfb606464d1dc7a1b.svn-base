<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="#fff"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" >

            <ImageView
                android:id="@+id/main_item_qunbiao"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/qun_biao"
                android:visibility="gone" />

            <TextView
                android:id="@+id/main_item_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/main_item_title"
                android:layout_marginBottom="15dp"
                android:ellipsize="end"
                android:gravity="bottom|left"
                android:lineSpacingExtra="3dp"
                android:maxLines="1"
                android:text="标题标题标题标题标题标题标题标题"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/main_item_title"
                android:layout_width="fill_parent"
                android:layout_height="43dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/main_item_qunbiao"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="2"
                android:text="标题标题标题题标题标题标题题标题标题标题题标题标题标题题"
                android:textColor="#000"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="#fff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/main_item_image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/video_hint"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/showshou_video_play"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#e8e8e8" />

</RelativeLayout>