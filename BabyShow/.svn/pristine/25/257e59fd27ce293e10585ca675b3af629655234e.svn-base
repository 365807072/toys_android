<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grow_data_bg"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:id="@+id/ly1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <!--
                 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2dp"
                android:text="请选择"
                android:textColor="#FF695F" />
            -->

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/after_sel"/>

            <ImageView
                android:id="@+id/before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/before" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly1"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/sui"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/input_bg_sel"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#A5A5A5"
                android:textColorHint="#A5A5A5"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="岁" />

            <EditText
                android:id="@+id/month"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/wait_input_bg"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#A5A5A5"
                android:textColorHint="#A5A5A5"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="月" />

            <EditText
                android:id="@+id/day"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/wait_input_bg"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#A5A5A5"
                android:textColorHint="#A5A5A5"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="天" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/grow_cancel"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/birth_sel" />

            <Button
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/grow_ok"
                android:gravity="center"
                android:text="确定"
                android:textColor="@android:color/background_light" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>