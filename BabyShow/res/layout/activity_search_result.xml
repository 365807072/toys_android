<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E6E6E6" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/title_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/search_finish"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/grow_detail_backback" />

        <EditText
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/main_titile_search_bg"
            android:ems="10"
            android:gravity="center|left"
            android:hint="用户、商家、帖子"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/search_title_search"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="搜索"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/search_option01"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="用户"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/search_option_type01"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/search_option_down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_option02"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="商家"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/search_option_type02"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/search_option_up" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_option03"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="帖子"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/search_option_type03"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/search_option_up" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_option04"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text="群"
                android:textColor="#999999"
                android:textSize="@dimen/text_size_14" />

            <ImageView
                android:id="@+id/search_option_type04"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/search_option_up" />
        </LinearLayout>
    </LinearLayout>

    <com.yyqq.commen.view.PullDownView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="90dp"
        android:cacheColorHint="#FFFFFF"
        android:divider="#FFFFFF"
        android:footerDividersEnabled="false"
        android:hapticFeedbackEnabled="false"
        android:listSelector="#FFFFFF"
        android:scrollbars="none" >
    </com.yyqq.commen.view.PullDownView>

</RelativeLayout>