<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/group_main_headAll"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="#fff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/group_main_bgimg"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/group_main_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:src="@drawable/group_main_finish" />

        <ImageView
            android:id="@+id/group_main_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:src="@drawable/group_main_edit"
            android:visibility="gone" />

        <TextView
            android:id="@+id/group_main_businessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_main_finish"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/group_main_addNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/group_main_businessIcon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignTop="@+id/group_main_businessName"
            android:layout_toRightOf="@+id/group_main_businessName"
            android:src="@drawable/group_main_business" />

        <TextView
            android:id="@+id/group_main_detialText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/group_main_businessIcon"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/group_main_add"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/group_main_addNumber"
            android:layout_alignRight="@+id/group_main_addNumber"
            android:layout_marginBottom="20dp"
            android:src="@drawable/group_main_add" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#f5f5f5" >

        <ImageView
            android:id="@+id/group_detail_showOption"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/group_detial_all_btn" />
    </RelativeLayout>

</LinearLayout>